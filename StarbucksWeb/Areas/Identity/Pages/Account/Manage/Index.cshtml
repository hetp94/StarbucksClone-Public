@page
@model IndexModel
@{
    ViewData["Title"] = "My Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}



<br />
<h3 class="text-capitalize text-center">@ViewData["Title"]</h3>
<br />
<partial name="_StatusMessage" for="StatusMessage" />


<form id="profile-form" method="post">
    <div class="card shadow p-3">
        <div class="row mb-3 p-2">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-lg-6">
                <h4 class="text-capitalize">Personal Info</h4>
                <div class="form-floating mb-3">
                    <input asp-for="Username" class="form-control form-control-sm" disabled />
                    <label asp-for="Username" class="form-label"></label>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control form-control-sm" />
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control form-control-sm" />
                    <label asp-for="Input.FirstName" class="form-label"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control form-control-sm" />
                    <label asp-for="Input.LastName" class="form-label"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>

            </div>
            <div class="col-lg-6">
                <h4 class="text-capitalize">Address</h4>
                <div class="form-floating mb-3">
                    <input asp-for="Input.StreetAddress" class="form-control form-control-sm" />
                    <label asp-for="Input.StreetAddress" class="form-label"></label>
                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.City" class="form-control form-control-sm" />
                    <label asp-for="Input.City" class="form-label"></label>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.State" class="form-control form-control-sm" />
                    <label asp-for="Input.State" class="form-label"></label>
                    <span asp-validation-for="Input.State" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PostalCode" class="form-control form-control-sm" />
                    <label asp-for="Input.PostalCode" class="form-label"></label>
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>
            </div>
           
           
        </div>

        <div class="d-flex mx-auto">
            <div class="p-2">
                <button id="update-profile-button" type="submit" class="btn py-1  btn-primary ">Save</button>
            </div>
        </div>
       
    </div>
 
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
