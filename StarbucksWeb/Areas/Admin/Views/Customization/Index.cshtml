@model IEnumerable<StarbucksModels.DbModels.CustomizationModel>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutAdmin";
}

<div class="row p-2 mb-3">
    <div class="col-3">
        <a asp-action="Create">Create Customization Type</a>
    </div>
    <div class="col-3">
        <a asp-action="CreateSubCustomizationType">Create Sub Customization Type</a>
    </div>
    <div class="col-3">
        <a asp-action="CreateCustomization">Create Customization</a>
    </div>
    <div class="col-3">
        <a asp-action="CreateSubCustomization">Create Sub Customization</a>
    </div>
</div>

<table class="table table-striped table-sm table-bordered" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomizationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCustomizationType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customization)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubCustomization)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomizationType)
                    <a asp-action="Edit" asp-route-id="@item.Id" class="text-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="text-danger">Delete</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCustomizationType)
                    @if(item.SubCustomizationType != null){
                        <a asp-action="EditSubCustomizationType" asp-route-id="@item.Id" class="text-warning">Edit</a>
                        <a asp-action="DeleteSubCustomizationType" asp-route-id="@item.Id" class="text-danger">Delete</a>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customization)
                    @if(item.Customization != null){
                        <a asp-action="EditCustomization" asp-route-id="@item.Id" class="text-warning">Edit</a>
                        <a asp-action="DeleteCustomization" asp-route-id="@item.Id" class="text-danger">Delete</a>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SubCustomization)
                    @if(item.SubCustomization != null){
                        <a asp-action="EditSubCustomization" asp-route-id="@item.Id" class="text-warning">Edit</a>
                        <a asp-action="DeleteSubCustomization" asp-route-id="@item.Id" class="text-danger">Delete</a>
                    }
                </td>
               
            </tr>
        }
    </tbody>
</table>


@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myTable').DataTable(
                {
                    "pageLength": 100
                }
            );
        });
    </script>        
}
